<?xml version="1.0" encoding="utf-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="XamarinPlayoffsSample.Pages.MainMenuPage">
	<Grid
		Padding="20, 20, 20, 20">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="*" />
			<RowDefinition
				Height="150"/>
		</Grid.RowDefinitions>
		<Label
			Text="{Binding WelcomeText}"
			VerticalOptions="Center"
			FontSize="20"
			Grid.Row="0"
			HorizontalOptions="Center" />
		<StackLayout
			Grid.Row="1">
			<Button
				Text="Idz do storny drugiej"
				VerticalOptions="End"
				HorizontalOptions="FillAndExpand"
				Command="{Binding GoToTheSecondPageCommand}" />
			<Button
				Text="Idz do API graczy"
				VerticalOptions="End"
				HorizontalOptions="FillAndExpand"
				Command="{Binding GoToPlayersApiCommand}"
				BorderRadius="2" />
			<Button
				Text="Drzewko Turnieju"
				Command="{Binding GoToTheTournamentCommand}"
				HorizontalOptions="FillAndExpand"
				BorderRadius="2" />
		</StackLayout>
		<Image
			Grid.Row="2"
			Source="pilkarzyki.png" />
	</Grid>
</ContentPage>