@model IEnumerable<PlayoffsCreator.Models.PlayerModel>

@{
    ViewBag.Title = "PlayerView";
}

<h2>Dodaj graczy</h2>

<p>
    @Html.ActionLink("Dodaj gracza", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <b><font color="#8AC007">@Html.DisplayFor(modelItem => item.Name)</font></b>
        </td>
        <td>
            <b><font color="#8AC007">@Html.DisplayFor(modelItem => item.Surname)</font></b>
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.ID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>


<p align="right">
    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
    {
        <fieldset class="form-horizontal">
            <div class="form-actions no-color">
                <input type="submit" value="Powrót do strony głównej" class="btn" />
            </div>
        </fieldset>
    }
</p>